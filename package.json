{
  "name": "@virgilioneto/mongoose-wrapper",
  "version": "0.0.2",
  "description": "Mongoose Wrapper for MongoDB",
  "main": "index.js",
  "scripts": {
    "test": "npx mocha ./test/**/*.spec.js",
    "istanbul": "npx istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec ./test/**/*.spec.js && rm -rf ./coverage",
    "codecov": "npx istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec ./test/**/*.spec.js && ./node_modules/.bin/codecov -f ./coverage/coverage.json && rm -rf ./coverage",
    "doc": "npx jsdoc -t ./node_modules/ink-docstrap/template -R README.md -r index.js ./lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/virgilioneto/mongoose-wrapper.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/virgilioneto/mongoose-wrapper/issues"
  },
  "homepage": "https://github.com/virgilioneto/mongoose-wrapper#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "codecov": "^3.3.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "ink-docstrap": "^1.3.2",
    "istanbul": "^0.4.5",
    "jsdoc": "^3.5.5",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "mongoose": "^5.5.5"
  }
}
